<div class="pt-3">
	<%= form_with model: [work, comment]  do |form| %>
		<% if comment.errors.any? %>
			<div style="color: red">
				<h2><%= pluralize(comment.errors.count, "error") %> prohibited this work from being saved:</h2>
				<ul>
					<% comment.errors.each do |error| %>
						<li><%= error.full_message %></li>
					<% end %>
				</ul>
			</div>
		<%end%>
		<div class="mt-2">
			<%= form.rich_text_area :body, class: "form-control", id: dom_id(work,comment) %>
